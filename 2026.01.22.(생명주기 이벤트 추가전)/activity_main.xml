<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A">

    <!-- 챗봇 버튼 (왼쪽 상단) -->
    <Button
        android:id="@+id/ChatbotActivity"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="챗봇"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 임시 시간 버튼 (오른쪽 상단) -->
    <Button
        android:id="@+id/temporaryTimeButton"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="임시 시간 \n (5분)"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 사용 기록 버튼 (챗봇 버튼 아래) -->
    <Button
        android:id="@+id/usageRecordButton"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="사용\n기록"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ChatbotActivity" />

    <!-- 자물쇠 아이콘 -->

    <!-- 보너스 정보 컨테이너 -->
    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_background"
        android:padding="20dp"
        android:src="@drawable/lock_im"
        app:layout_constraintBottom_toTopOf="@id/bonusInfoContainer"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bonusInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#252525"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/subMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lockIcon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 다음 보너스 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/nextBonusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="다음 보너스"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bonusTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27분 후 5분 추가!"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 진행 바 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <ProgressBar
                    android:id="@+id/bonusProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:progressTint="#4CAF50"
                    android:progressBackgroundTint="#333333"
                    android:max="100"
                    android:progress="5" />

                <TextView
                    android:id="@+id/checkMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:layout_gravity="end|center_vertical"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- 진행 상태 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/currentProgressText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/totalProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30분"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 사용 가능 시간 (잠금화면과 동일한 크기) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용 가능 시간:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <!-- ⭐ 크기를 14sp로 줄임 (잠금화면과 동일) -->
                <TextView
                    android:id="@+id/textViewDividedCounter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 서브 메시지 -->
    <TextView
        android:id="@+id/subMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3초마다 1초씩 사용 시간이 적립됩니다."
        android:textSize="16sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/pointToggleButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bonusInfoContainer" />

    <!-- MainActivity가 찾는 숨겨진 TextView들 -->
    <TextView
        android:id="@+id/textViewSessionTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 포인트 사용 버튼 -->
    <Button
        android:id="@+id/pointToggleButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="포인트 사용"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/rounded_button_gray"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>